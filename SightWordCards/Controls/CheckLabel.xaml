<UserControl x:Class="Crews.Education.Presentation.SightWordCards.Controls.CheckLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crews.Education.Presentation.SightWordCards.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="100">
    <DockPanel>
        <CheckBox x:Name="MainCheckBox" x:FieldModifier="private" DockPanel.Dock="Left" VerticalAlignment="Center"/>
        <Label x:Name="ContentLabel" x:FieldModifier="private" VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>
