<UserControl x:Class="SightWordCards.Controls.BigCheckLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SightWordCards.Controls"
             mc:Ignorable="d" MouseUp="UserControl_MouseUp" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <Grid>
        <Viewbox HorizontalAlignment="Left">
            <DockPanel Height="50">
                <Grid DockPanel.Dock="Left" Width="50" Margin="0, 0, 10, 0">
                    <Rectangle x:Name="Box" x:FieldModifier="private" Stroke="White" 
                   StrokeThickness="5"/>
                    <Rectangle x:Name="CheckGlyph" x:FieldModifier="private" Fill="White" Margin="10" Visibility="Hidden"/>
                </Grid>
                <Label x:Name="ContentLabel" x:FieldModifier="private" Foreground="White" FontSize="30" FontWeight="Bold"/>
            </DockPanel>
        </Viewbox>
    </Grid>
</UserControl>
